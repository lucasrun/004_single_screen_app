<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#434154</item>
        <item name="android:background">#ffcff0</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#434154</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="gfx_info">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_toLeftOf">@id/time</item>
    </style>

    <style name="gfx_logo">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="gfx_pic">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
